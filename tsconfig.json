{
  "compilerOptions": {
    "target": "es2021",
    "module": "Node16",
    "moduleResolution": "Node16",
    "types": ["node"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "noEmit": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
